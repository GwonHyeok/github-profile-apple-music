{
  "hosting": {
    "public": "packages/web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1/**",
        "function": "api-v1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true
  },
  "functions": {
    "source": "packages/backend",
    "predeploy": [
      "yarn --prefix \"$RESOURCE_DIR\" run lint",
      "yarn --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "ui": {
      "enabled": true
    },
    "pubsub": {
      "enabled": true
    },
    "functions": {
      "enabled": true
    },
    "firestore": {
      "enabled": true
    },
    "hosting": {
      "enabled": true,
      "port": 8050
    }
  }
}
